{
  "name": "double-marketplace",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "test": "hardhat test",
    "test:watch": "hardhat test --watch",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:polygon": "hardhat test --network polygon test/chains/PolygonMarket.test.ts",
    "test:bsc": "hardhat test --network bsc test/chains/BSCMarket.test.ts",
    "test:ethereum": "hardhat test --network ethereum test/chains/EthereumMarket.test.ts",
    "test:all-chains": "yarn test:ethereum && yarn test:polygon && yarn test:bsc",
    "n": "npx hardhat node",
    "test:local": "hardhat test --network localhost",
    "deploy:polygon": "hardhat deploy --network polygon",
    "deploy:bsc": "hardhat deploy --network bsc",
    "deploy:ethereum": "hardhat deploy --network ethereum",
    "verify:polygon": "hardhat verify --network polygon",
    "verify:bsc": "hardhat verify --network bsc",
    "verify:ethereum": "hardhat verify --network ethereum",
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "prepare:deploy": "yarn clean && yarn compile && yarn test",
    "prepare:local": "yarn clean && yarn compile && yarn node",
    "gas-report": "REPORT_GAS=true hardhat test",
    "gas-report:polygon": "REPORT_GAS=true yarn test:polygon",
    "gas-report:bsc": "REPORT_GAS=true yarn test:bsc",
    "typechain": "hardhat typechain",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "ci": "yarn lint && yarn format:check && yarn test:coverage"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-ignition": "^0.15.7",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.7",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.11",
    "@nomicfoundation/ignition-core": "^0.15.7",
    "@openzeppelin/contracts": "^5.1.0",
    "@openzeppelin/contracts-upgradeable": "^5.1.0",
    "@openzeppelin/hardhat-upgrades": "^3.5.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.9.0",
    "chai": "^4.2.0",
    "ethers": "^6.13.4",
    "hardhat": "^2.22.15",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solidity-coverage": "^0.8.13",
    "solidity-docgen": "^0.6.0-beta.35",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typechain": "^8.3.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@drizzle/react-components": "^1.5.3",
    "@drizzle/react-plugin": "^1.5.3",
    "@drizzle/store": "^1.5.3",
    "dotenv": "^16.4.5"
  }
}
